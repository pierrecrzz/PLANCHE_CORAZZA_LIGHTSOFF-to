    Grille grille = new Grille();
    int Time = 60;
    int cpt = 0;
    int argent = 0;
    boolean debut = false;
    int nbrinverseurs = 1;
    /**
     * Creates new form LIGHTS_OFF
     */
    public LIGHTS_OFF() {
        initComponents();
        //Panneau_infos_joueurs.setVisible(false);
        for (int k = 0; k < 5; k++){
            for (int i = 0; i < 5; i ++){
                CelluleGraphique cellgraph = new CelluleGraphique(grille.CellulesJeu[k][i]);
                
                cellgraph.addActionListener(new java.awt.event.ActionListener() {
                    @Override
                    public void actionPerformed(java.awt.event.ActionEvent evt) {
                        Cellule c = cellgraph.CelluleAssociee;
                        int x = c.X;
                        int y = c.Y;
                        grille.touchcell(x, y);
                        cpt++;
                        coups.setText(cpt + "");
                        Grille.repaint();
                        if(grille.isfinish() & debut == true){
                            infos.append("Félicitations, vous avez gagné !\n");
                            debut = false;
                            nouvellepartie.setEnabled(true);
                            if(cpt <= 100){
                                argent += (100 - cpt);
                                infos.append("Vous venez de gagner " + (100 - cpt) + " pièces\n");
                            }
                            pieces.setText(argent + "");
                            for(int k = 0; k < 5; k++){
                                for(int i = 0; i < 5; i++){
                                    grille.CellulesJeu[k][i].victoire = true;
                                }
                            }
                        }
                        Grille.repaint();
                    }
                });
                Grille.add(cellgraph);
            }
        }
        Grille.repaint();
    }

