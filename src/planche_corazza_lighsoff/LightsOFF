    private void nouvellepartieActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_nouvellepartieActionPerformed
        // TODO add your handling code here:
        cpt = 0;
        inverseurs.setText(nbrinverseurs + "");
        coups.setText(cpt + "");
        grille.clear();
        initcellules();
        for(int k = 0; k < 5; k++){
            for(int i = 0; i < 5; i++){
                grille.CellulesJeu[k][i].victoire = false;
            }
        }
        nouvellepartie.setEnabled(false);
        debut = true;
        Grille.repaint();
        
    }//GEN-LAST:event_nouvellepartieActionPerformed

    private void acheterinverseurActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_acheterinverseurActionPerformed
        // TODO add your handling code here:
        if(argent >= 100){
            nbrinverseurs++;
            argent -= 100;
            pieces.setText(argent + "");
            inverseurs.setText(nbrinverseurs + "");
        }
    }//GEN-LAST:event_acheterinverseurActionPerformed

    private void inverserActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_inverserActionPerformed
        // TODO add your handling code here:
        if(nbrinverseurs > 0 & debut){
            nbrinverseurs --;
            inverseurs.setText(nbrinverseurs + "");
            for(int k = 0; k < 5; k++){
                for(int i = 0; i < 5; i++){
                    grille.CellulesJeu[k][i].changestate();
                }
            }
            Grille.repaint();
        }
    }//GEN-LAST:event_inverserActionPerformed

